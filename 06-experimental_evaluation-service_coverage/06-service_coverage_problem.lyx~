begin{algorithmic}
\end_layout

\begin_layout Plain Layout


\backslash
Repeat
\end_layout

\begin_layout Plain Layout

	
\backslash
State $c'
\backslash
gets pick
\backslash
_random
\backslash
_cell(C_{m})$
\end_layout

\begin_layout Plain Layout

	
\backslash
State $p_{c'}
\backslash
gets adjust
\backslash
_power(c',dec
\backslash
_rate)$
\end_layout

\begin_layout Plain Layout


\backslash
